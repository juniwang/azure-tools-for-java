<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension point="org.eclipse.ui.commands">
       <command
            name="Publish as Azure Web App..."
            categoryId="com.microsoft.ui.dropdown.category"
            id="com.microsoft.azuretools.webapp.commands.deployToAzure"
            icon="icons/publishWebsite.png">
            <commandParameter id="com.microsoft.ui.dropdown.msg" name="DropDown Options" optional="true"></commandParameter>
       </command>   
   </extension>
   
   <extension point="org.eclipse.ui.handlers">
      <handler
            commandId="com.microsoft.azuretools.webapp.commands.deployToAzure"
            class="com.microsoft.azuretools.webapp.handlers.DeployToAzureHandler">
             <enabledWhen checkEnabled="false">
                <with 
                variable="selection">
                <count value="1"/> 
                <iterate 
                    operator="or">
                    <adapt type="org.eclipse.core.resources.IProject">
                        <test property="com.microsoft.ui.webapp.property.isWebProj"/>
                    </adapt>
                </iterate> 
                </with>
              </enabledWhen>
      </handler>
   </extension>
   
   <extension point="org.eclipse.ui.menus">           
      <menuContribution locationURI="popup:org.eclipse.ui.popup.any?after=additions">
          <menu
               label="Azure"
               id="com.microsoft.azuretools.webprojmenu"
               icon="icons/windowsAzure.png">
              <command 
                      commandId="com.microsoft.azuretools.webapp.commands.deployToAzure"/>
<!--
              <visibleWhen checkEnabled="false">
                <with 
                variable="selection">
                <count value="1"/> 
                <iterate 
                    operator="or">
                    <adapt type="org.eclipse.core.resources.IProject">
                        <test property="com.microsoft.ui.webapp.property.isWebProj"/>
                    </adapt>
                </iterate> 
                </with>
              </visibleWhen>
-->
          </menu>
      </menuContribution>
      <menuContribution locationURI="menu:com.microsoft.ui.dropdown.toolbar.command">
         <command commandId="com.microsoft.azuretools.webapp.commands.deployToAzure" label="Publish as Azure Web App..." style="push">
            <parameter name="com.microsoft.ui.dropdown.msg" value="Web App"></parameter>
         </command>
      </menuContribution>
   </extension>
   
   <extension point="org.eclipse.ui.commandImages">
     <image commandId="com.microsoft.azuretools.webapp.commands.deployToAzure" icon="icons/publishWebsite.png"></image>
   </extension>

</plugin>
